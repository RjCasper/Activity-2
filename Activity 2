#include <iostream>
#include <iomanip>

using namespace std;

int main()
{
	int a,b,c;
	
	cout << "  The following are number conversions for each month:\n\n";
	
	cout << "	01=January		02=February		03=March		04=April\n";
	cout << "	05=May			06=June			07=July			08=August\n";
	cout << "	09=September		10=October		11=November		12=December\n\n\n";
	
	cout << "NOTE: Enter a valid date you prefer\n\n";
	
	cout << "Enter Month:	";
	cin >> a;
	cout << "Enter day:	";
	cin >> b;
	cout << "Enter Year:	";
	cin >> c;
	
	switch (a)
	{
		case 1:
			if (b>=1 && b<=31)
			{
				cout << "	January " << b << "," << c;
			}
			else
			{
				cout << "Invalid date!";
			}
			break;
