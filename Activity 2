		case 11:
			if (b>=1 && b<=30)
			{
				cout << "	November " << b << "," << c;
			}
			else
			{
				cout << "Invalid date!";
			}
			break;
		case 12:
			if (b>=1 && b<=31)
			{
				cout << "	December " << b << "," << c;
			}
			else
			{
				cout << "Invalid date!";
			}
